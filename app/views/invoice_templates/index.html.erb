<table class="table">
  <thead>
    <tr>
      <th scope="col">Template</th>
      <th scope="col">Notes</th>
      <th scope="col">Created At</th>
    </tr>
  </thead>
  <tbody>
    <% current_user.invoice_templates.each do |template| %>
      <tr>
        <th scope="row"><%= link_to template.template_name, profile_path(id: current_user.profile.id, 
                                                                        current_template: template.id, 
                                                                        current_template_name: template.template_name), 
                                                                        method: :patch %></th>
        <td><%= template.notes %></td>
        <td><%= template.created_at.strftime("%m/%d/%Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>